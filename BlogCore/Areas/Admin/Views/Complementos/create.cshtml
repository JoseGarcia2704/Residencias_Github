@model BlogCore.Models.Complemento

@{
    ViewData["Title"] = "Crear nuevo Complemento";

}
<style>
    .form-border {
        border: 1px solid #000; /* 1px de ancho y color negro */
    }
</style>
<br />
<br />

<h2 class="text-center">Crear un nuevo complemento</h2>
<br />


<form method="POST" asp-action="Create">
    <div class="row px-2 offset-1 border">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="col-10 offset-1 mt-4">
            
            
            <div class="form-group row">
                <div class="col-4">
                    <label class="col-4">
                        <label asp-for="UUIDC"></label>
                    </label>
                </div>

                <div class="col-8">
                    <input asp-for="UUIDC" class="form-control form-border" placeholder="Ingrese el UUId " />
                    <span asp-validation-for="UUIDC" class="text-danger"></span>
                </div>
            </div>
            <br />
            <div class="form-group row">
                <div class="col-4">
                    <label class="col-4">
                        <label asp-for="Monto"></label>
                    </label>
                </div>
                <div class="col-8">
                    <input asp-for="Monto" class="form-control form-border" placeholder="Ingrese el monto" />
                    <span asp-validation-for="Monto" class="text-danger"></span>
                </div>

            </div>
            <br />

            <div class="form-group row">
                <div class="col-4">
                    <label class="col-4">
                        <label asp-for="saldoInsoluto"></label>
                    </label>
                </div>
                <div class="col-8">
                    <input asp-for="saldoInsoluto" class="form-control form-border" placeholder="Ingrese el saldo insoluto" />
                    <span asp-validation-for="saldoInsoluto" class="text-danger"></span>
                </div>

            </div>
            <br />
            <div class="form-group row mt-2">
                <div class="col-8">
                    <partial name="_VistaCrearVolver" />
                </div>
            </div>

        </div>

    </div>
</form>
