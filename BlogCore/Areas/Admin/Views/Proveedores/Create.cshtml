@model BlogCore.Models.ViewModels.ProveedorVM
@using BlogCore.Utilidades

@{
    ViewData["Title"] = "Subir Factura_Complemento";
}

<style>
    .form-border {
        border: 1px solid #000; /* 1px de ancho y color negro */
    }

    

    .form-group {
        margin-bottom: 30px;
    }

    
</style>

<br />
<br />

<h2 class="text-center">Subir nueva factura o complemento</h2>
<br />

