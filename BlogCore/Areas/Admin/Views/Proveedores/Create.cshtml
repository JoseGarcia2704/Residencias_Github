                    <label>Orden de compra</label>
                </div>
                <div class="col-8">
                    <input asp-for="Proveedor.OrdenCompra" class="form-control form-border" placeholder="Ingrese la orden de compra" />
                    <span asp-validation-for="Proveedor.OrdenCompra" class="text-danger"></span>
                </div>
            </div>
