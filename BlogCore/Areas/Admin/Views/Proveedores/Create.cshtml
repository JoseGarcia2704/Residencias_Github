@section Scripts
    {
    <script src="https://cdn.tiny.cloud/1/qukxrn62f4bz0iv6z7enaelkkzuzugir28y709xit9xm659s/tinymce/5/tinymce.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/js/toastr.min.js"></script>
    <script>
        tinymce.init({
            selector: 'textarea',
            plugins: 'lists',
            menubar: 'file edit format'
        });
    </script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@10"></script>
    <script>
        $(document).ready(function () {
            var message = '@TempData["AlertMessage"]';
            if (message) {
                Swal.fire({
                    title: 'Error',
                    text: message,
                    icon: 'error',
                    confirmButtonText: 'Aceptar'
                });
            }
        });
    </script>
    <script>
        $(document).ready(function () {
            var message_ar = '@TempData["AlertMessage"]';
            if (message_ar) {
                Swal.fire({
                    title: 'Error',
                    text: message,
                    icon: 'error',
                    confirmButtonText: 'Aceptar'
                });
            }
        });
    </script>
    <script>
        $(document).ready(function () {
            var showSuccessAlert = '@TempData["ShowSuccessAlert"]';
            var successMessage = '@TempData["SuccessMessage"]';
            if (showSuccessAlert && successMessage) {
                Swal.fire({
                    title: 'Éxito',
                    text: successMessage,
                    icon: 'success',
                    confirmButtonText: 'Aceptar'
                }).then((result) => {
                    if (result.isConfirmed) {
                        window.location.href = '@Url.Action("Index", "Proveedores")'; // Reemplaza "NombreDeTuControlador" por el nombre real de tu controlador
                    }
                });
            }
        });
    </script>

    

}
