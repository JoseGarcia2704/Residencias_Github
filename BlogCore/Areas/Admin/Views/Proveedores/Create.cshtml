                    <input type="file" name="archivosXml" id="subidaArchivosXml" class="form-control" accept="application/xml" />
                </div>
            </div>
            
            <div class="form-group row">
                <div class="col-4">
                    <label>Notas</label>
                </div>
                <div class="col-8">
                    <input asp-for="Proveedor.Notas" class="form-control form-border" placeholder="Ingrese las notas" />
                    <span asp-validation-for="Proveedor.Notas" class="text-danger"></span>
                </div>
            </div>
