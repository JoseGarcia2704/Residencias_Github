@using Microsoft.AspNetCore.Identity
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<ul class="navbar-nav">
@if (SignInManager.IsSignedIn(User))
{
    <li class="nav-item">
            <span class="nav-link text-white">Hola: @(UserManager.GetUserAsync(User).Result.razonSocial) </span>
        </li>
    <li class="nav-item">
        <form  class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
            <button  type="submit" class="nav-link btn btn-link text-white">Cerrar sesion</button>
        </form>
    </li>
}
else
{
        <li class="nav-item">
            <a class="nav-link text-light" asp-area="Identity" asp-page="/Account/Register">
                <i class="fa fa-user-circle" aria-hidden="true"></i>
                Registro
            </a>
        </li>

    <li class="nav-item">
            <a class="nav-link text-light" asp-area="Identity" asp-page="/Account/Login">
                <i class="fa fa-user" aria-hidden="true"></i>
                Acceso
            </a>
    </li>
}
</ul>
